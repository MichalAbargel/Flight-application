        <m:Map x:Name="myMap" CredentialsProvider="HBQeR9I48JfWW98U1Pdu~asANyHEBrlXx5h_5yzWgvw~AuPTWcx-_MGWt2yvPrrAyUlItM3vj0HXYJMqJKaT9PayMMlFqbTrkaK8CKvH7x_c" 
